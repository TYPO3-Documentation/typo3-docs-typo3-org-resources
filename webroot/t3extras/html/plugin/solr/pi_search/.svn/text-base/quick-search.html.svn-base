<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>Template for the quick search form view (top right corner) for EXT:solr</title>
</head>
<body>

<!-- ###SOLR_SEARCH### begin -->

	<!-- ###SOLR_SEARCH_FORM### begin -->
	<div class="quick-search">
		###FORM.SUGGEST_URL###
		<div class="smart-search">
			<a href="#" class="selector"><span class="ico i-typo"></span></a>
			<ul>
				<li class="current"><a href="#"><span class="ico i-typo"></span>Website Search</a></li>
				<li><a href="#"><span class="ico i-ext"></span>Extensions Search</a></li>
<!-- 				<li><a href="#"><span class="ico i-case"></span>Case Studies Search</a></li> -->
			</ul>
		</div>

		<form action="###FORM.ACTION###" method="get" accept-charset="###FORM.ACCEPT-CHARSET###" id="solr-website-search">
			<label for="form-element-21" class="text s-input">
				<span>Website Search</span>
				<input type="text" name="###SOLR.PREFIX###[q]" value="" class="tx-solr-q" id="form-element-21" spellcheck="false" />
				<input type="hidden" name="id" value="###FORM.ACTION_ID###" />
				<input type="hidden" name="###FORM.ACTION_LANGUAGE_PARAMETER###" value="###FORM.ACTION_LANGUAGE###" />
			</label>
			<button><span class="ico i-search"></span></button>
		</form>

		<form action="###FORM.ACTION###" method="get" accept-charset="###FORM.ACCEPT-CHARSET###" id="solr-extension-search" style="display:none;">
			<label for="form-element-21" class="text s-input">
				<span>Extension Search</span>
				<input type="text" name="###SOLR.PREFIX###[q]" value="" class="tx-solr-q" id="form-element-21" spellcheck="false" />
				<input type="hidden" name="id" value="###FORM.ACTION_ID###" />
				<input type="hidden" name="###FORM.ACTION_LANGUAGE_PARAMETER###" value="###FORM.ACTION_LANGUAGE###" />

				<input type="hidden" name="###SOLR.PREFIX###[filter][0]" value="type%3Atx_ter_extensions" />
			</label>
			<button><span class="ico i-search"></span></button>
		</form>

	</div>
	<!-- ###SOLR_SEARCH_FORM### end -->

<!-- ###SOLR_SEARCH### end -->

<!-- ###SOLR_SEARCH_ERROR### begin -->
	###LLL:searchFailed###
<!-- ###SOLR_SEARCH_ERROR### end -->

</body>
</html>
