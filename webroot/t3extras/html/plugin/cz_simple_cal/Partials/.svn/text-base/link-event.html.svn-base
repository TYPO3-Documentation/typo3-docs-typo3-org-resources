{namespace cal=Tx_CzSimpleCal_ViewHelpers}
<f:if condition="{event.showPageInstead}">
	<f:then>
		<f:if condition="{event.description}">
			<f:then>
				<cal:link.action controller="Event" action="show" arguments="{event: event.event}" class="{class} url">{text}</cal:link.action>
			</f:then>
			<f:else>
				<f:link.external uri="{event.showPageInstead}" target="_blank" class="{class}">{text}</f:link.external>
			</f:else>
		</f:if>
	</f:then>
	<f:else>
		<cal:link.action controller="Event" action="show" arguments="{event: event.event}" class="{class} url">{text}</cal:link.action>
	</f:else>
</f:if>